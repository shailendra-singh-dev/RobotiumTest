<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shail.robotiumtest.MainActivity">

    <LinearLayout
        android:id="@+id/input_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_weight="1"
            android:id="@+id/input_number_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_input_number_first"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/input_number_1" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/input_number_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_input_number_second"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/input_number_1" />
    </LinearLayout>

    <Button
        android:layout_below="@id/input_box"
        android:id="@+id/add_numbers"
        style="@style/Base.TextAppearance.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unlock_button_button_height"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/add_numbers"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/add_numbers" />

    <Button
        android:layout_below="@id/add_numbers"
        android:id="@+id/subtract_numbers"
        style="@style/Base.TextAppearance.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unlock_button_button_height"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/subtract_numbers"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/add_numbers" />

    <Button
        android:layout_below="@id/subtract_numbers"
        android:id="@+id/multiply_numbers"
        style="@style/Base.TextAppearance.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unlock_button_button_height"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/multiply_numbers"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/add_numbers" />

    <Button
        android:id="@+id/devide_numbers"
        android:layout_below="@id/multiply_numbers"
        style="@style/Base.TextAppearance.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unlock_button_button_height"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/devide_numbers"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/add_numbers" />


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/result"
        android:hint="Result"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
